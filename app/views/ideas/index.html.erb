<h1>Get a fresh idea!!</h1>

<nav>
    <%=link_to 'Home', root_path%>
    <% if current_user%>
    <p>Welcome back, <%=current_user.first_name%>!</p>
    <%=link_to 'Have an Idea?', new_idea_path%>
    <%=link_to 'Sign Out', session_path, method: :delete%>
    <%else%>
    <%=link_to 'Sign In', new_session_path%>
    <%end%>
</nav>

<%@ideas.each do |idea|%>
<div>
    <%=link_to idea.title, idea%>
    <p><%=idea.description%></p>
    <ul>
        <li>By: <%=idea.user.first_name%></li>
        <li>Likes: <%=idea.likers.count%></li>
    </ul>
</div>
<%end%>